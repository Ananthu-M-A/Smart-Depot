<div class="container">
    <div class="row">
        <div class="col">
            <form action="/admin/addCategory" method="POST">
                <table class="table table-dark table-striped" id="admin-table">
                    <tbody>
                        <tr>
                            <td>
                                <input type="name" name="productCategory" id="name" placeholder="Category"
                                    class="form-control" aria-label="Sizing example input"
                                    aria-describedby="inputGroup-sizing-default">
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="text-center">
                    <button btn class="btn btn-outline-primary fw-bold text-dark w-25 p-2 rounded-3" type="submit">Add
                        New Category</button>
                </div>
            </form>
            <div class="text-center">
                <button btn class="btn btn-outline-primary fw-bold text-dark w-25 p-2 rounded-3"
                    id="btnCancel">Cancel</button>
            </div>


        </div>
    </div>
</div>