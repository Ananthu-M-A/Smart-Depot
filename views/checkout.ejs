                                            <div class="col-md-6 form-group">
                                                <label>City</label>
                                                <input class="form-control" name="userCity" type="text">
                                            </div>
                                            <div class="col-md-6 form-group">
                                                <label>State</label>
                                                <input class="form-control" name="userState" type="text">
                                            </div>
                                            <div class="col-md-6 form-group">
                                                <label>ZIP Code</label>
                                                <input class="form-control" name="userZIP" type="tel" pattern="[0-9]{6}"
                                                title="Enter valid PIN code">
                                            </div>
                                        </div>
                                    </div>
                                <br>
                                <br>
                                <div class="col-md-12" id="shipping-address">
                                    <br>
                                    <br>
                                    <h5 class="font-weight-semi-bold mb-4 text-center">Shipping Address</h5>
                                    <div class="row">
                                        <div class="col-md-6 form-group">
                                            <label>Name</label>
                                            <input class="form-control" name="userName2" type="text">
                                        </div>
                                        <div class="col-md-6 form-group">
                                            <label>E-mail</label>
                                            <input class="form-control" name="userEmail2" type="email" aria-describedby="emailHelp">
                                        </div>
                                        <div class="col-md-6 form-group">
                                            <label>Mobile No</label>
                                            <input class="form-control" name="alternateMobileNo2" type="tel" pattern="[0-9]{10}"
                                            title="Enter a valid mobile number">
                                        </div>
                                        <div class="col-md-6 form-group">
                                            <label>Address Line 1</label>
                                            <input class="form-control" name="userAddressLine12" type="text">
                                        </div>
                                        <div class="col-md-6 form-group">
                                            <label>Address Line 2</label>
                                            <input class="form-control" name="userAddressLine22" type="text">
                                        </div>
                                        <div class="col-md-6 form-group">
                                            <label>Country</label>
