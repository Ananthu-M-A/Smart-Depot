
<%-include('partials/header.ejs')%>
<%-include('partials/topbarUser.ejs')%>


    <!-- Page Header Start -->
    <div class="container-fluid bg-secondary mb-5">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
            <h1 class="font-weight-semi-bold text-uppercase mb-3">WishList</h1>
            <div class="d-inline-flex">
                <p class="m-0"><a href="">Home</a></p>
                <p class="m-0 px-2">-</p>
                <p class="m-0">WishList</p>
            </div>
        </div>
    </div>
    <!-- Page Header End -->

    <!-- Products Start -->
<div class="container">
    <div class="row">
      <% wishlist.forEach(wish => { %>
        <div class="col-md-3">
          <div class="card mb-3">
            <img src="/productImage/<%= wish.productId.productImageNames[0] %>" class="card-img-top" id="productImageLarge" alt="Product Image">
            <div class="card-body">
              <h5 class="card-title text-center"><%=wish.productId.productName %></h5>
              <p class="card-text">Category: <%= wish.productId.productCategory %></p>
              <p class="card-text">Brand: <%= wish.productId.productBrand %></p>
              <p class="card-text">Price: <%= wish.productId.productPrice %></p>
              <!-- Add other product details as needed -->
              <a href="/home/productDetails/<%= wish.productId._id %>" class="btn btn-primary">View Details</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
  
<!-- Products End -->

    <%-include('partials/bottombarUser.ejs')%>
    <%-include('partials/footer.ejs')%>

 