<%-include('partials/header.ejs')%>

<div id="background1" class="container-fluid d-flex justify-content-center align-items-center">
  <div class="row w-100 m-0">
    <div class="col-md-4"></div>
    <div class="col-md-4 bg-light p-5 rounded text-center">
      <h1 class="mb-3">SIGN UP</h1>

      <form method="POST" action="/userSignup" class="text-center text-light">
        <div class="mb-3">
          <label for="name" class="form-label text-dark">Full Name</label>
          <input type="name" class="form-control bg-light" id="name" name="fullname" aria-describedby="emailHelp"
            required>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label text-dark">Email Address</label>
          <input type="email" class="form-control bg-light" id="email" name="email" aria-describedby="emailHelp"
            required>
        </div>
        <div class="mb-3">
          <label for="number" class="form-label text-dark">Mobile Number</label>
          <input type="text" id="mobile" name="mobile" class="form-control bg-light" required>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label text-dark">Password</label>
          <input type="password" id="password" name="password" class="form-control bg-light" required>
        </div>
    
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <button class="btn btn-outline-primary w-10" type="submit">Send OTP</button>
            </div>
          </div>
        </div>
      </form>
      <a href="/userLogin"><p class="mt-2 text-dark">Already have an account</p></a>
      </div>
    <div class="col-md-4"></div>
  </div>
</div>

  <%-include('partials/footer.ejs')%>
