<%-include('partials/header.ejs')%>
    <%-include('partials/topbarUser.ejs')%>

        <!-- Page Header Start -->
        <div class="container-fluid bg-secondary mb-5">
            <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
                <h1 class="font-weight-semi-bold text-uppercase mb-3">Account Details</h1>
                <div class="d-inline-flex">
                    <p class="m-0"><a href="">Home</a></p>
                    <p class="m-0 px-2">-</p>
                    <p class="m-0">
                        <%= users.fullname %>
                    </p>
                </div>
            </div>
        </div>
        <!-- Page Header End -->

        <div class="container-fluid">
            <div class="nav nav-tabs justify-content-center border-secondary mb-4">
                <a class="nav-item nav-link active" data-toggle="tab" href="#tab-pane-1">Your Orders</a>
                <a class="nav-item nav-link" data-toggle="tab" href="#tab-pane-2">Login & Security</a>
                <a class="nav-item nav-link" data-toggle="tab" href="#tab-pane-3">Your Addreses</a>
            </div>
            <div class="tab-content">
                <div class="tab-pane fade show active" id="tab-pa   ne-1">
                    <h4 class="mb-3">Product Description</h4>
                </div>
                <div class="tab-pane fade" id="tab-pane-2">
                    <h4 class="mb-3">Product Description</h4>
                </div>
                <div class="container-fluid tab-pane fade" id="tab-pane-3">
                    <div class="row">
                        <div class="col-md-12">
                            <form action="/home/saveAddress" method="POST">
                                <h4 class="font-weight-semi-bold mb-4 text-center">Billing Address</h4>
                                <div class="row">
                                    <div class="col-md-6 form-group">
                                        <label>First Name</label>
                                        <input class="form-control" name="userFirstName" type="text"
                                            placeholder="Damon" value="<%= billAddress.userFirstName %>">
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <label>Last Name</label>
                                        <input class="form-control" name="userLastName" type="text"
                                            placeholder="Salvatore">
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <label>E-mail</label>
                                        <input class="form-control" name="userEmail" type="text"
                                            placeholder="example@email.com">
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <label>Mobile No</label>
                                        <input class="form-control" name="userMobileNo" type="text"
                                            placeholder="+123 456 789">
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <label>Address Line 1</label>
                                        <input class="form-control" name="userAddressLine1" type="text"
                                            placeholder="123 Street">
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <label>Address Line 2</label>
                                        <input class="form-control" name="userAddressLine2" type="text"
                                            placeholder="123 Street">
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <label>Country</label>
                                        <select class="custom-select" name="userCountry">
                                            <option selected>India</option>
                                            <option>United States</option>
                                            <option>China</option>
                                            <option>Sreelanka</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <label>City</label>
                                        <input class="form-control" name="userCity" type="text"
                                            placeholder="Mystic Falls">
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <label>State</label>
                                        <input class="form-control" name="userState" type="text" placeholder="New York">
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <label>ZIP Code</label>
                                        <input class="form-control" name="userZIP" type="text" placeholder="123456">
                                    </div>
                                    <div class="col-md-12 form-group">
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="shipto">
                                            <label class="custom-control-label" for="shipto" data-toggle="collapse" data-target="#shipping-address">Ship to different address</label>
                                        </div>
                                    </div>
                                    
                                </div>

                        </div>
                        <br>
                        <br>
                        <div class="col-md-12 collapse" id="shipping-address">
                            <h4 class="font-weight-semi-bold mb-4 text-center">Shipping Address</h4>
                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <label>First Name</label>
                                    <input class="form-control" name="userFirstName2" type="text" placeholder="Damon">
                                </div>
                                <div class="col-md-6 form-group">
                                    <label>Last Name</label>
                                    <input class="form-control" name="userLastName2" type="text"
                                        placeholder="Salvatore">
                                </div>
                                <div class="col-md-6 form-group">
                                    <label>E-mail</label>
                                    <input class="form-control" name="userEmail2" type="text"
                                        placeholder="example@email.com">
                                </div>
                                <div class="col-md-6 form-group">
                                    <label>Mobile No</label>
                                    <input class="form-control" name="userMobileNo2" type="text"
                                        placeholder="+123 456 789">
                                </div>
                                <div class="col-md-6 form-group">
                                    <label>Address Line 1</label>
                                    <input class="form-control" name="userAddressLine12" type="text"
                                        placeholder="123 Street">
                                </div>
                                <div class="col-md-6 form-group">
                                    <label>Address Line 2</label>
                                    <input class="form-control" name="userAddressLine22" type="text"
                                        placeholder="123 Street">
                                </div>
                                <div class="col-md-6 form-group">
                                    <label>Country</label>
                                    <select class="custom-select" name="userCountry2">
                                        <option selected>India</option>
                                        <option>United States</option>
                                        <option>China</option>
                                        <option>Sreelanka</option>
                                    </select>
                                </div>
                                <div class="col-md-6 form-group">
                                    <label>City</label>
                                    <input class="form-control" name="userCity2" type="text" placeholder="Mystic Falls">
                                </div>
                                <div class="col-md-6 form-group">
                                    <label>State</label>
                                    <input class="form-control" name="userState2" type="text" placeholder="New York">
                                </div>
                                <div class="col-md-6 form-group">
                                    <label>ZIP Code</label>
                                    <input class="form-control" name="userZIP2" type="text" placeholder="123456">
                                </div>
                            </div>
                        </div>
                        <div class="form-group mb-0 text-center">
                            <button type="submit" class="btn btn-primary px-3">Save Addresses</button>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        </div>
        </div>

        <%-include('partials/bottombarUser.ejs')%>
            <%-include('partials/footer.ejs')%>