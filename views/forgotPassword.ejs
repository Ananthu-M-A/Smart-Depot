<%-include('partials/header.ejs')%>

<div id="background3" class="container-fluid d-flex justify-content-center align-items-center">
  <div class="row w-100 m-0">
    <div class="col-md-4"></div>
    <div class="col-md-4 bg-light p-5 rounded text-center">
      <h1 class="mb-3">Reset Password</h1>
        <form method="POST" action="/userLogin/forgotPassword" class="text-center text-dark">
        
          <div class="mb-3">
            <label for="email" class="form-label">Enter your email Address</label>
            <input type="email" class="form-control bg-outline-primary" id="email" name="email" aria-describedby="emailHelp"
              required>
          </div>
          <div class="container">
            <div class="row">
              <div class="col-md-12">
                <button class="btn btn-outline-primary w-10 fw-bold fs-4" type="submit">Send OTP</button>
              </div>
            </div>
          </div>
        </form>
        <a href="/userLogin"><p class="mt-2 text-dark">Login to you account</p></a>
        <a href="/userSignup"><p class="mt-2 text-dark">Create a new account</p></a>
      </div>
    <div class="col-md-4"></div>
  </div>
</div>

